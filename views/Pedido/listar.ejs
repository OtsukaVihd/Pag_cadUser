
<script src="js/Pedido/listar.js"></script>
<script src="https://cdn.sheetjs.com/xlsx-0.20.0/package/dist/xlsx.full.min.js"></script>


<div class="logoEmpresa">
    <img src="img/logo-jequiti.png" width="200" alt="">
</div>
<div>
    <button id="btnExportarPdf" onclick="window.print()" class="btn btn-primary">Exportar para PDF</button>
    <button id="btnExportarExcel" class="btn btn-primary">Exportar para Excel</button>
</div>
<h1>Pedidos gerados</h1>


<div>
    <div class="form-group">
        <fieldset>
            <legend>Filtrar por</legend>
            <label><input type="radio" value="numpedido" name="criterioBusca" checked> Nº Pedido</label><br>
            <label><input type="radio" value="nomeproduto" name="criterioBusca"> Nome do Produto</label>
        </fieldset>

    </div>
    <div class="form-group">
        <label>Termo de busca</label>
        <div class="input-group mb-3">
            <input type="text" id="inputBusca" class="form-control" placeholder="Filtrar">
            <div>
                <button class="btn btn-outline-primary" type="button" id="btnPesquisar"><i class="fas fa-search"></i>Buscar</button>
            </div>
        </div>
    </div>

    <table id="tabelaPedidos" class="table table-striped">
        <thead>
            <th>Nº Pedido</th>
            <th>Produto</th>
            <th>Quantidade</th>
            <th>Preço Unitário</th>
            <th>Valor</th>
        </thead>
        <tbody>
            <% lista.forEach(function(value, index){ %>
                <tr>
                    <td><%= value.pedidoId %></td>
                    <td><%= value.produtoNome %></td>
                    <td><%= value.pedidoItemQuantidade %></td>
                    <td><%= (value.pedidoItemPreco) %></td>
                    <td><%= (value.pedidoItemPreco * value.pedidoItemQuantidade).toFixed(2) %></td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</div>